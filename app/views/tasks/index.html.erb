<h1>Here are my tasks</h1>

<% @tasks.each do |task| %>
<ul>
  <li> <%if task.completed == true %>
    <p><i class="fas fa-check-square"></i> <%=link_to task.title, task_path(task.id)%>
    <% else %>
    <p><i class="fas fa-stop"></i> <%= link_to task.title, task_path(task.id)%>
    <% end %>
     <%= link_to task_path(task.id),
    method: :delete,
    data: { confirm: "Are you sure?" } do %>
    <i class="fas fa-trash-alt"></i>
    <% end %>
  </li>
</ul>
<% end %>

<p>   <i class="fas fa-plus"></i>  <%= link_to  'Add a new task', new_task_path %></p>

